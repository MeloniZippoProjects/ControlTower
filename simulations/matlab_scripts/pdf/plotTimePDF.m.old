function [ h, p, f_a ] = plotTimePDF( sample, pdffig, name, width )
	figure('Name', strcat('Autocorr for ', string(name).char));
    f_a = autocorr(sample);

    zero_count = 0;
    sample_nozero = [];
    for idx = 1 : length(sample)
       if sample(idx) == 0
           zero_count = zero_count + 1;
       else
           sample_nozero = [sample_nozero, sample(idx)];
       end
    end
    p_zero = zero_count / length(sample);
      
    figure(pdffig);
    hold on;

    p_label = strcat(string('p(0) of '), rho);
    p = plot(0, p_zero, 'DisplayName' , p_label.char );
    p.Marker = '*';

    hist_label = strcat(string('p(x | x > 0) of '), rho);
    h = histogram(sample_nozero, 'DisplayName', hist_label.char , 'DisplayStyle', 'stairs');
    h.EdgeColor = p.Color;
    h.BinWidth = width;
    h.BinCounts = ( h.BinCounts / sum(h.BinCounts)) * ( 1 - p_zero);
end